# Production Environment Variables
# Copy this file to .env.prod and update with your production values

# Database Configuration
POSTGRES_USER=scoreboard_user
POSTGRES_PASSWORD=your-super-secure-production-password
DATABASE_URL=postgresql://scoreboard_user:your-super-secure-production-password@postgres:5432/scoreboard_prod

# JWT Secret (MUST be changed in production)
JWT_SECRET=your-super-secure-jwt-secret-key-for-production-only

# Server Configuration
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# Redis Configuration
REDIS_URL=redis://redis:6379

# Security Settings
BCRYPT_ROUNDS=12
JWT_EXPIRES_IN=24h

# Rate Limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX=100
SCORE_UPDATE_RATE_LIMIT=10

# Logging
LOG_LEVEL=info

# Monitoring (optional)
# PROMETHEUS_ENABLED=true
# PROMETHEUS_PORT=9090

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM

# SSL/TLS (if using HTTPS)
# SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
# SSL_KEY_PATH=/etc/nginx/ssl/key.pem
