{
  "name": "scoreboard-system-mvp",
  "version": "1.0.0",
  "description": "Real-time scoreboard system with Fastify, TypeScript, PostgreSQL, and WebSocket",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/main.js",
    "dev": "ts-node src/main.ts",
    "dev:simple": "ts-node src/main-simple.ts",
    "watch": "ts-node --watch src/main.ts",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "test": "jest",
    "test:watch": "jest --watch",
    "docs": "echo 'OpenAPI documentation available at http://localhost:3000/docs'",
    "docs:build": "echo 'Building OpenAPI documentation...' && npm run build"
  },
  "keywords": [
    "fastify",
    "typescript",
    "scoreboard",
    "websocket",
    "postgresql"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^8.4.0",
    "@fastify/jwt": "^7.2.4",
    "@fastify/rate-limit": "^8.0.3",
    "@fastify/static": "^6.12.0",
    "@fastify/websocket": "^8.3.1",
    "@fastify/swagger": "^8.12.0",
    "@fastify/swagger-ui": "^3.0.0",
    "@prisma/client": "^5.7.1",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.3.1",
    "fastify": "^4.24.3",
    "ioredis": "^5.8.1",
    "prisma": "^5.7.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/ioredis": "^5.0.0",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.0",
    "typescript": "^5.3.0"
  }
}
